    <script>
   
        function gerarNumeroAleatorio(n) {
          return Math.floor(Math.random() * n) + 1;
        }
        
        
        function girarD6() {
          const resultado = gerarNumeroAleatorio(6);
          document.getElementById("resultadoD6").textContent = resultado;
        }
        
        
        function girarD8() {
          const resultado = gerarNumeroAleatorio(8);
          document.getElementById("resultadoD8").textContent = resultado;
        }
        
        
        function girarD20() {
          const resultado = gerarNumeroAleatorio(20);
          document.getElementById("resultadoD20").textContent = resultado;
        }
         </script>
